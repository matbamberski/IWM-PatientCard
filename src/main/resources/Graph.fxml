<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GraphController">
    <children>
          <VBox>
              <children>
            <Label text="Wybierz obserwacje:" />
            <ChoiceBox id="observationChoice" prefWidth="150.0" />
            <Region prefHeight="50.0" prefWidth="10.0" />
                  <Button fx:id="defaultButton" mnemonicParsing="false" onAction="#changeToDefault" prefHeight="30.0" prefWidth="150.0" text="Domyślne" />
            <Region prefHeight="50.0" prefWidth="10.0" />
            <Label text="Data początkowa" />
            <DatePicker id="startDate" prefWidth="150.0" />
            <Label text="Data końcowa" />
            <DatePicker id="endDate" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#redrawChart" prefHeight="30.0" prefWidth="150.0" text="Przerysuj" />
            <Region minHeight="100.0" prefWidth="10.0" />
                <Button fx:id="backToPatient" mnemonicParsing="false" onAction="#backToPatientLineView" prefHeight="30.0" prefWidth="150.0" text="Wstecz" />
              </children>
          </VBox>
    </children>
</HBox>
